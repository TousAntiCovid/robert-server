[
  {
    "id": "Any call to the verify endpoint containing a 6, 12 or 38 characters code starting with 'valid' succeeds",
    "httpRequest": {
      "method": "GET",
      "path": "/api/v1/verify",
      "queryStringParameters": {
        "code": ["valid([a-zA-Z0-9]{1}|[a-zA-Z0-9]{7}|[a-zA-Z0-9-]{31})"]
      }
    },
    "httpResponse": {
      "headers": {
        "Content-Type": ["application/json"]
      },
      "statusCode": 200,
      "body": "{\"valid\":true}"
    }
  },
  {
    "id": "Any call to the verify endpoint looking like a JWT succeeds",
    "httpRequest": {
      "method": "GET",
      "path": "/api/v1/verify",
      "queryStringParameters": {
        "code": [".+[.].+[.].+"]
      }
    },
    "httpResponse": {
      "headers": {
        "Content-Type": ["application/json"]
      },
      "statusCode": 200,
      "body": "{\"valid\":true}"
    }
  },
  {
    "id": "By default, any call to the verify endpoint must fail",
    "httpRequest": {
      "method": "GET",
      "path": "/api/v1/verify",
      "queryStringParameters": {
        "code": [".*"]
      }
    },
    "httpResponse": {
      "headers": {
        "Content-Type": ["application/json"]
      },
      "statusCode": 200,
      "body": "{\"valid\":false}"
    }
  }
]
